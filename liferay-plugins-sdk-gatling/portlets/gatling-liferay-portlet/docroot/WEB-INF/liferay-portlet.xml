<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>gatling</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>
			configuration
		</control-panel-entry-category>		
		<control-panel-entry-weight>1.5</control-panel-entry-weight>
		 
		<!-- Custom permission control panel -->
		<control-panel-entry-class>com.excilys.liferay.gatling.security.SecurityManagement</control-panel-entry-class> 
		<!-- avoid double post -->
		<action-url-redirect>true</action-url-redirect>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>gatling-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>gatling</role-name>
		<role-link>Gatling</role-link>
	</role-mapper>
</liferay-portlet-app>